{% extends 'base.html.twig' %}

{% block title %}Login page{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-light d-flex justify-content-end" style="background-color: #28a745">
        <p class="mx-5">Welcome to Doctilob</p>
        <img src="/pharmacards/image5.jpg" alt="img" style="width: 100px">
    </nav>
{% endblock %}


{% block body %}
<form method="post" class="w-25">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    <h1 class="my-5 font-weight-normal text-center">Please sign in</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-4" required autofocus>

    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-outline-primary mt-4 " type="submit">
        Sign in
    </button>
</form>
{% endblock %}
