{% extends 'base.html.twig' %}

{% block title %}
    Welcome to your prescription
{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-light bg-primary d-flex justify-content-end">
        <div class="col-2">
            {% if app.user %}
                <a href="{{ path('app_logout') }}" class="btn btn-outline-light my-2 my-sm-0"> Se d√©connecter</a>
            {% endif %}
        </div>
    </nav>
{% endblock %}

{% block body %}

    <div class="container my-5">
        <h1 class="text-center">Prescription list, patient {{ app.user.username }}</h1>
    </div>

    <div class="container mb-5">
        <table class="table w-100 text-center m-auto table-hover ">
            <thead class="bg-primary text-light">
            <tr class="row mx-0 ">
                <th class="col-3">Drug name</th>
                <th class="col-1">Dose <br> (mg)</th>
                <th class="col-3">Frequency <br> (times per day)</th>
                <th class="col-2">Duration <br> (in days)</th>
                <th class="col-3">Pharmacist Advice</th>
            </tr>
            </thead>
            <tbody>
            {% for prescriptionDrug in prescription.prescriptionDrugs %}
                <tr class="d-flex align-items-center table-borderless">
                    <td class="col-3" >{{ prescriptionDrug.drug.name }}</td>
                    <td class="col-1">{{ prescriptionDrug.dose }}</td>
                    <td class="col-3">{{ prescriptionDrug.frequency }}</td>
                    <td class="col-2">{{ prescriptionDrug.duration }}</td>
                    <td class="col-3">{{ random(['Drink watter', 'After lunch', 'Never with alcohol']) }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" >No prescriptions for now</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="pharmacies">
        <h2 class="text-center my-5">Pharmacy where you can take your medications :</h2>
        {{  include('patient/_pharmacyList.html.twig') }}
    </div>
{% endblock %}
