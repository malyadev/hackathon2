{% extends 'base.html.twig' %}

{% block title %}
    Welcome to your prescription
{% endblock %}

{% block body %}

    <div class="container my-5">
        <h1 class="text-center">Prescription list, patient {{ app.user.username }}</h1>
    </div>

    <div class="container mb-5">
        <table class="table table-striped w-100 text-center m-auto table-hover table-borderless">
            <thead class="bg-primary text-light">
            <tr class="row mx-0">
                <th class="col-3">Drug name</th>
                <th class="col-1">Dose (mg)</th>
                <th class="col-3">Frequency (times per day)</th>
                <th class="col-2">Duration (in days)</th>
                <th class="col-3">Pharmacist Advice</th>
            </tr>
            </thead>
            <tbody>
            {% for prescriptionDrug in prescriptionDrugs %}
                <tr class="d-flex align-items-center">
                    <td class="col-3" >{{ prescriptionDrug.drug.name }}</td>
                    <td class="col-1">{{ prescriptionDrug.dose }}</td>
                    <td class="col-3">{{ prescriptionDrug.frequency }}</td>
                    <td class="col-2">{{ prescriptionDrug.duration }}</td>
                    <td class="col-3">{{ random(['Drink watter', 'After lunch', 'Never with alcohol']) }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" >No prescriptions for now</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="maps">

    </div>

    <div class="pharmacies">
        {{  include('patient/_pharmacyList.html.twig') }}
    </div>
{% endblock %}
