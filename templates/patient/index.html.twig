{% extends 'base.html.twig' %}

{% block title %}
    Welcome to your prescription
{% endblock %}

{% block body %}

    <div class="container my-5">
        <h1 class="text-center">Prescription list, patient {{ app.user.username }}</h1>
    </div>

    <div>
        <table class="table table-striped w-75 text-center m-auto table-hover table-borderless">
            <thead class="bg-primary text-light">
            <tr class="row mx-0">
                <th class="col-3">Drug</th>
                <th class="col-3">Dose (mg)</th>
                <th class="col-3">Frequency (times per day)</th>
                <th class="col-3">Duration (in days)</th>
                <th class="col-2">id</th>
            </tr>
            </thead>

            <tbody>
            {% for prescriptionDrug in prescriptionDrugs %}
                <tr class="d-flex align-items-center">
                    <td class="col-3" >{{ prescriptionDrug.drug.name }}</td>
                    <td class="col-3">{{ prescriptionDrug.dose }}</td>
                    <td class="col-3">{{ prescriptionDrug.frequency }}</td>
                    <td class="col-3">{{ prescriptionDrug.duration }}</td>
                    <td class="col-2">{{ prescriptionDrug.prescription.id }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" >No prescriptions for now</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="maps">

    </div>

{% endblock %}
