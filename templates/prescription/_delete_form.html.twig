<form class="mb-5" method="post" action="{{ path('prescription_delete', {'id': prescription.id}) }}" onsubmit="return confirm('Are you sure you want to delete this prescription?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prescription.id) }}">
    <div class="row justify-content-center">
        <button class="btn btn-outline-danger">Delete the prescription</button>
    </div>
</form>
