{% extends 'base.html.twig' %}

{% block title %}New Prescription{% endblock %}
{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-light d-flex justify-content-end" style="background-color: #28a745">
        {% if app.user.roles[0] == 'ROLE_PHARMACIST' %}
            <p class="mt-3">Log as a pharmacist</p>
        {% elseif app.user.roles[0] == 'ROLE_PRACTITIONER' %}
            <p class="mt-3">Log as a practitioner</p>
        {% endif %}

        <div class="col-2">
            {% if app.user %}
                <a href="{{ path('app_logout') }}" class="btn btn-outline-light my-2 my-sm-0"> Logout</a>
            {% endif %}
        </div>
    </nav>
{% endblock %}

{% block body %}
    <h1>Create new Prescription</h1>

    {{ include('prescription/_form.html.twig') }}

{% endblock %}
