{{ form_start(form) }}
<div class="row bg-primary rounded py-5 justify-content-center">
    <div class="col-4">
        {{ form_label(form.drug, 'Select drug : ') }}
        {{ form_widget(form.drug) }}
    </div>

    <div class="col-7 ">
        <div class="col d-flex justify-content-end my-3">
            {{ form_label(form.frequency) }}
            {{ form_widget(form.frequency) }}
        </div>

        <div class="col d-flex justify-content-end my-3">
            {{ form_label(form.dose) }}
            {{ form_widget(form.dose) }}
        </div>

        <div class="col d-flex justify-content-end my-3">
            {{ form_label(form.duration) }}
            {{ form_widget(form.duration) }}
        </div>
    </div>
</div>

<div class="row mt-4 justify-content-between flex-row-reverse">
    <button class="btn btn-outline-success">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
